<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyColorButtons">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyColorlessButtons">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyFields">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:hint">0</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_columnWeight">4</item>
        <item name="android:maxLength">10</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:text">""</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="MyColorButtonsLandscape">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@android:color/holo_green_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyFieldsLandscape">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:hint">0</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_columnWeight">5</item>
        <item name="android:maxLength">10</item>
        <item name="android:layout_columnSpan">5</item>
        <item name="android:text">""</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>
</resources>
