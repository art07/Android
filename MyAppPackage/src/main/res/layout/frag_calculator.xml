<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="ua.art.myapppackage.FragCalculator">

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="7"
            tools:ignore="HardcodedText,UselessParent,RtlHardcoded, RtlSymmetry">

        <TextView android:id="@+id/textField"
                  android:paddingRight="12dp"
                  android:hint="0"
                  android:textColor="@android:color/black"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="4"
                  android:layout_rowWeight="1"
                  android:layout_columnSpan="4"
                  android:text=""
                  android:textSize="18sp"
                  android:gravity="center_vertical|end"/>

        <TextView android:id="@+id/textField2"
                  android:hint="0"
                  android:textColor="@android:color/black"
                  android:maxLength="10"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="4"
                  android:layout_rowWeight="3"
                  android:layout_columnSpan="4"
                  android:text=""
                  android:textSize="48sp"
                  android:gravity="center_vertical|end"
                  android:paddingRight="12dp"/>

        <TextView android:id="@+id/bClear"
                  android:background="@color/colorPrimary"
                  android:textColor="@android:color/white"
                  android:layout_columnSpan="2"
                  android:gravity="center"
                  android:text="@string/text_view_clear"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:textSize="36sp"
                  android:layout_columnWeight="2"
                  android:layout_rowWeight="2"
                  android:layout_marginRight="1dp" android:layout_margin="1dp"/>

        <TextView android:id="@+id/bPercent"
                  android:background="@color/colorPrimary"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:text="%"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:textSize="36sp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2" android:layout_marginRight="1dp" android:layout_margin="1dp"/>

        <TextView android:id="@+id/bDivide"
                  android:background="@color/colorPrimary"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:text="/"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:textSize="36sp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:layout_marginBottom="1dp" android:layout_margin="1dp"/>

        <TextView android:id="@+id/bSeven"

                  android:gravity="center"
                  android:text="7"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bEight"
                  android:gravity="center"
                  android:text="8"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bNine"
                  android:gravity="center"
                  android:text="9"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bMultiply"
                  android:background="@color/colorPrimary"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:text="x"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:layout_marginBottom="1dp" android:layout_margin="1dp"/>

        <TextView android:id="@+id/bFour"
                  android:gravity="center"
                  android:text="4"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bFive"
                  android:gravity="center"
                  android:text="5"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bSix"
                  android:gravity="center"
                  android:text="6"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bMinus"
                  android:background="@color/colorPrimary"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:text="-"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:layout_marginBottom="1dp" android:layout_margin="1dp"/>

        <TextView android:id="@+id/bOne"
                  android:gravity="center"
                  android:text="1"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bTwo"
                  android:gravity="center"
                  android:text="2"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bThree"
                  android:gravity="center"
                  android:text="3"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bPlus"
                  android:background="@color/colorPrimary"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:text="+"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:layout_marginBottom="1dp" android:layout_margin="1dp"/>

        <TextView android:id="@+id/bZero"
                  android:gravity="center"
                  android:text="0"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bDoubleZero"
                  android:gravity="center"
                  android:text="00"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bPoint"
                  android:gravity="center"
                  android:text="."
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:textColor="@android:color/black"/>

        <TextView android:id="@+id/bEqual"
                  android:background="@color/colorPrimary"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:text="="
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_columnWeight="1"
                  android:layout_rowWeight="2"
                  android:textSize="36sp" android:layout_margin="1dp"/>
    </GridLayout>
</FrameLayout>
