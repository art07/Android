<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:mask="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="ua.art.myapppackage.FragConverter">

    <GridLayout android:id="@+id/main_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2"
                android:padding="16dp"
                tools:ignore="ContentDescription,HardcodedText,UselessParent">

        <GridLayout android:id="@+id/grid_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:columnCount="3"
                    android:rowCount="5">

            <ImageView android:id="@+id/image_UKR"
                       app:srcCompat="@drawable/ukr"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_row="0"
                       android:layout_column="0"
                       android:layout_margin="3dp"/>

            <TextView android:id="@+id/textViewRate1"
                      android:layout_margin="3dp"
                      android:layout_width="0dp"
                      android:layout_height="0dp"
                      android:layout_row="0"
                      android:layout_column="1"
                      android:layout_rowWeight="1"
                      android:layout_columnWeight="3"
                      android:text="@string/rate_uah_text"
                      android:gravity="center"
                      android:textColor="@android:color/black"
                      android:textAppearance="?android:attr/textAppearanceMedium"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/editTextRate1"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    mask:allowed_chars="1234567890"
                    mask:mask="##.##"
                    app:keep_hint="true"/>

            <ImageView android:id="@+id/image_RUS"
                       app:srcCompat="@drawable/rus"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_row="1"
                       android:layout_column="0"
                       android:layout_margin="3dp"/>

            <TextView android:id="@+id/textViewRate2"
                      android:layout_margin="3dp"
                      android:layout_width="0dp"
                      android:layout_height="0dp"
                      android:layout_row="1"
                      android:layout_column="1"
                      android:layout_rowWeight="1"
                      android:layout_columnWeight="3"
                      android:text="@string/rate_rub_text"
                      android:gravity="center"
                      android:textColor="@android:color/black"
                      android:textAppearance="?android:attr/textAppearanceMedium"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/editTextRate2"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    mask:allowed_chars="1234567890"
                    mask:mask="##.##"
                    app:keep_hint="true"/>

            <GridLayout android:id="@+id/inner_grid_layout"
                        android:layout_margin="3dp"
                        android:layout_gravity="fill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:columnCount="2"
                        android:rowCount="1">

                <TextView android:id="@+id/text_view_link1"
                          android:text="@string/link1"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_row="0"
                          android:layout_column="0"
                          android:layout_columnWeight="1"
                          android:layout_rowWeight="1"
                          android:gravity="center"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:textColorLink="@color/colorAccent"/>

                <TextView android:id="@+id/text_view_link2"
                          android:text="@string/link2"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_row="0"
                          android:layout_column="1"
                          android:layout_columnWeight="1"
                          android:layout_rowWeight="1"
                          android:gravity="center"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:textColorLink="@color/colorAccent"/>
            </GridLayout>

            <Button android:id="@+id/bStart"
                    android:layout_gravity="center"
                    android:text="Start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="3"
                    android:layout_margin="3dp" android:elevation="24dp"/>

            <ToggleButton android:id="@+id/toggleButton"
                          android:text="ToggleButton"
                          android:layout_width="0dp"
                          android:layout_height="0dp"
                          android:layout_row="2"
                          android:layout_column="2"
                          android:layout_rowWeight="1"
                          android:layout_columnWeight="2"
                          android:layout_margin="3dp"/>

            <TextView android:id="@+id/emptyLabel1"
                      android:text=""
                      android:layout_width="match_parent"
                      android:layout_height="15dp"
                      android:layout_row="3"
                      android:layout_column="0"
                      android:layout_columnSpan="3"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:background="@color/colorPrimaryDark"/>
        </GridLayout>

        <GridLayout android:id="@+id/grid_layout2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:columnCount="2"
                    android:rowCount="4">

            <TextView android:id="@+id/emptyLabel2"
                      android:text=""
                      android:layout_width="match_parent"
                      android:layout_height="15dp"
                      android:layout_row="0"
                      android:layout_column="0"
                      android:layout_columnSpan="2"
                      android:layout_columnWeight="5"/>

            <TextView android:id="@+id/textView7"
                      android:layout_margin="3dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_row="1"
                      android:layout_column="0"
                      android:text="EXCHANGE"
                      android:textColor="@android:color/black"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:layout_gravity="fill_vertical|fill_horizontal" android:gravity="center"/>

            <Spinner android:id="@+id/spinner"
                     android:layout_margin="3dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_row="1"
                     android:layout_column="1"
                     android:layout_gravity="end"/>

            <EditText android:id="@+id/main_edit_text"
                      android:layout_margin="3dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_row="3"
                      android:maxLength="9"
                      android:ems="9"
                      android:layout_column="0"
                      android:inputType="number"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:hint="0"
                      android:layout_gravity="fill_vertical"
                      android:gravity="center"/>

            <TextView android:id="@+id/field2"
                      android:text=""
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="3dp"
                      android:layout_column="1"
                      android:layout_row="2"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="fill_vertical|fill_horizontal" android:gravity="center"/>

            <TextView android:id="@+id/total_field"
                      android:text=""
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="3dp"
                      android:layout_column="1"
                      android:layout_row="3"
                      android:hint="0"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@color/colorAccent" android:layout_gravity="fill_vertical|fill_horizontal" android:gravity="center"/>

            <TextView android:id="@+id/field1"
                      android:text=""
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="3dp"
                      android:layout_column="0"
                      android:layout_row="2"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="fill_vertical|fill_horizontal" android:gravity="center"/>
        </GridLayout>
    </GridLayout>
</FrameLayout>

